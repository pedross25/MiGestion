-- invoice_with_products.sq
selectInvoiceWithCustomer:
SELECT
    i.id AS invoice_id,
    i.date AS invoice_date,
    i.payment_method_id,
    i.customer_id,
    c.id AS customer_id,
    c.businessName,
    c.streetAddress,
    c.city,
    c.state,
    c.postalCode,
    c.email,
    c.phoneNumber,
    c.cif,
    c.createdAt AS customer_createdAt
FROM
    invoiceEntity i
JOIN
    customerEntity c ON i.customer_id = c.id;